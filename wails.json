{
  "name": "PolyForge",
  "author": {
    "name": "Keehan",
    "email": "",
    "url": ""
  },
  "description": "Keehan's Universal Modpack Installer",
  "outputfilename": "PolyForge",
  "frontend": {
    "dir": "frontend",
    "install": "npm install",
    "build": "npm run build",
    "dev": "npm run dev"
  },
  "assetdir": "frontend/dist",
  "wailsjsdir": "frontend/wailsjs",
  "build": {
    "devServerURL": "http://127.0.0.1:5173",
    "compiler": "esbuild",
    "platform": {
      "windows": {
        "arch": ["amd64"]
      },
      "linux": {
        "arch": ["amd64"]
      }
    }
  },
  "preBuildHooks": {
    "windows/amd64": "powershell -NoProfile -ExecutionPolicy Bypass -File \"{{.ProjectDir}}/scripts/cleanup-wailsbindings.ps1\""
  }
}
